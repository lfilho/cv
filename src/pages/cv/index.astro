---
import { Astro } from 'astro';

import CVLayout from '@layouts/CV.astro';

import Education from '@components/cv/sections/education';
import Experience from '@components/cv/sections/experience';
import Header from '@components/cv/sections/header';
import Languages from '@components/cv/sections/languages';
import Noteworthy from '@components/cv/sections/noteworthy';
import OffTopic from '@components/cv/sections/offtopic';

import { cvData } from '@components/cv/cvData';

const isVerbose = Astro.props.isVerbose || false;
---

<CVLayout>
    <Header data={cvData.header} isVerbose={isVerbose}/>
    <Experience data={cvData.experience} isVerbose={isVerbose}/>
    <Education data={cvData.education} isVerbose={isVerbose}/>
    <Noteworthy data={cvData.noteworthy} isVerbose={isVerbose}/>
    <Languages data={cvData.languages} isVerbose={isVerbose}/>
    <OffTopic data={cvData.offTopic} isVerbose={isVerbose}/>
</CVLayout>
