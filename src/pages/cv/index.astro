---
import CVLayout from '@layouts/CV.astro';

import Education from '@components/cv/sections/education';
import Experience from '@components/cv/sections/experience';
import Header from '@components/cv/sections/header';
import Skills from '@components/cv/sections/skills';

import { cvData, cvKeywords } from '@components/cv/cvData';

const isVerbose = Astro.props.isVerbose || false;
const url = cvData.header.contact.url.href;
const name = cvData.header.name;
const author = `${name.first} ${name.last}, ${name.title}`;
const pageTitle = `${author} - Software Engineering Leader`;
const description = cvData.header.introduction.join(' ');

const keywordList = cvKeywords.join(', ');
---

<CVLayout url={url} name={name} author={author} pageTitle={pageTitle} description={description} keywordList={keywordList}>
    <Header data={cvData.header} isVerbose={isVerbose} />
    <Experience data={cvData.experience} isVerbose={isVerbose} />
    <Education
        data={cvData.education}
        languageData={cvData.languages}
        booksData={cvData.books}
        noteworthyData={cvData.noteworthy}
        isVerbose={isVerbose}
    />
    <Skills data={cvKeywords} isVerbose={isVerbose} />
</CVLayout>
